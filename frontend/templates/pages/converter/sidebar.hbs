<select name="selBank" id="csb" class="converter_select-bank">
  <option value="NBRB">НБРБ</option>
</select>

<div class="curr-list">
  <div class="input-select">
    <label for="i1">
      <select name="val" id="si1">
        <option value="BYN">BYN</option>
        {{#each db.dir}}
        <option value={{this.Cur_Abbreviation}}>
          {{this.Cur_Abbreviation}}
        </option>
        {{/each}}
      </select>
    </label>
    <input id="i1" type="text" autocomplete="off" maxlength="10" value={{usd.Cur_OfficialRate}} />
  </div>

  <div class="input-select">
    <label for="i2">
      <select name="val" id="si2">
        <option value="BYN">BYN</option>
        {{#each db.dir}}
        <option value={{this.Cur_Abbreviation}} {{#ifCond this.Cur_Abbreviation '==' 'USD' }}selected="selected"
          {{/ifCond}}>
          {{this.Cur_Abbreviation}}
        </option>
        {{/each}}
      </select>
    </label>
    <input id="i2" type="text" autocomplete="off" maxlength="10" value="1" />
  </div>
</div>
<div class="input-select">
  <button class="input-select_btn-add" type="button">Add</button>
</div>